@model AdvancedProgramming_Lesson1.Models.LiteraryGenres

@{
    ViewData["Title"] = "Edycja";
}

<h1>Edycja rekordu</h1>

<h4>Gatunki literackie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfOriginOfTheGenre" class="control-label"></label>
                <input asp-for="DateOfOriginOfTheGenre" class="form-control" />
                <span asp-validation-for="DateOfOriginOfTheGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheMainMotifsInTheGenre" class="control-label"></label>
                <input asp-for="TheMainMotifsInTheGenre" class="form-control" />
                <span asp-validation-for="TheMainMotifsInTheGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PopularityOfTheGenre" class="control-label"></label>
                <input asp-for="PopularityOfTheGenre" class="form-control" />
                <span asp-validation-for="PopularityOfTheGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheNumberOfBooksInAGivenGenre" class="control-label"></label>
                <input asp-for="TheNumberOfBooksInAGivenGenre" class="form-control" />
                <span asp-validation-for="TheNumberOfBooksInAGivenGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
